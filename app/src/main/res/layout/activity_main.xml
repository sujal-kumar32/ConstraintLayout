<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

   <androidx.cardview.widget.CardView
       android:id="@+id/cd1"
       android:layout_width="match_parent"
       android:layout_height="300dp"
       app:layout_constraintTop_toTopOf="parent"
       app:cardBackgroundColor="#0000FF"
       >

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/iv1"
               android:layout_width="0dp"
               android:layout_height="200dp"
               android:src="@drawable/img"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="25dp"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:scaleType="centerCrop" />

       </androidx.constraintlayout.widget.ConstraintLayout>
   </androidx.cardview.widget.CardView>
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cd2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/cd1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cd3"
        android:layout_marginTop="-50dp"
        app:cardBackgroundColor="#E4CE2B"
        app:layout_constraintHorizontal_chainStyle="spread"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/img_1"
            android:layout_marginTop="20dp"
            />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/iv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/cd1"
        app:layout_constraintStart_toEndOf="@id/cd2"
        app:layout_constraintEnd_toStartOf="@id/cd4"
        android:layout_marginTop="-50dp"
        app:cardBackgroundColor="#E73E73"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/img_2"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/iv3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cd4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toBottomOf="@id/cd1"
        app:layout_constraintStart_toEndOf="@id/cd3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-50dp"

        app:cardBackgroundColor="#5DAEEF"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/img_3"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/iv4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@+id/tv3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt1"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@+id/cd2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/email"
        android:paddingEnd="16dp"
        android:textColor="#DB29DE"
        android:background="@drawable/btn"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt2"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="sms"
        app:layout_constraintTop_toBottomOf="@+id/cd2"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/bt1"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/sms"
        android:paddingEnd="16dp"
        android:textColor="#48C34F"
        android:background="@drawable/btnsms"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt3"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Dail"
        app:layout_constraintTop_toBottomOf="@+id/bt1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/dial"
        android:paddingEnd="16dp"
        android:textColor="#115C94"
        android:background="@drawable/btndial"

        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt4"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="O7"
        app:layout_constraintTop_toBottomOf="@+id/bt2"
       app:layout_constraintStart_toEndOf="@+id/bt3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:drawableEnd="@drawable/url"
        android:paddingEnd="16dp"
        android:textColor="#FBA11D"
        android:background="@drawable/btnurl"

        />
    <EditText
        android:id="@+id/et1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name"
        android:textSize="17sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bt3"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/bt5"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="submit"
        app:layout_constraintTop_toBottomOf="@+id/bt4"
        app:layout_constraintStart_toEndOf="@+id/et1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>